<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.tuwien.GUI.MainGuiController">
   <center>
      <SplitPane dividerPositions="0.5" prefHeight="800.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
        <items>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <top>
                  <Label alignment="TOP_CENTER" text="CNL" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </top>
               <center>
                  <SplitPane dividerPositions="0.7183833116036505" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
                    <items>
                        <GridPane>
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <TextArea fx:id="taCNL" onKeyReleased="#tfCnlOnKeyPressed" prefHeight="200.0" prefWidth="200.0" promptText="insert problem description ..." />
                           </children>
                        </GridPane>
                        <GridPane>
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <TabPane>
                                 <tabs>
                                    <Tab closable="false" text="Errors">
                                       <content>
                                          <TextArea fx:id="taError" editable="false" prefHeight="200.0" prefWidth="200.0" />
                                       </content>
                                    </Tab>
                                 </tabs>
                                 <GridPane.margin>
                                    <Insets />
                                 </GridPane.margin>
                              </TabPane>
                           </children>
                        </GridPane>
                    </items>
                  </SplitPane>
               </center>
            </BorderPane>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <top>
                  <Label alignment="TOP_CENTER" text="ASP" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </top>
               <center>
                  <SplitPane dividerPositions="0.7196870925684485" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
                    <items>
                        <GridPane>
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <TextArea fx:id="taASP" prefHeight="200.0" prefWidth="200.0">
                                 <font>
                                    <Font name="Monospaced Regular" size="13.0" />
                                 </font>
                              </TextArea>
                           </children>
                        </GridPane>
                        <GridPane>
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <VBox>
                                 <children>
                                    <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" minWidth="-Infinity" spacing="20.0">
                                       <children>
                                          <Label text="Filter:" />
                                          <TextField fx:id="tfFilter" prefHeight="27.0" prefWidth="240.0" promptText="predicates (comma-separated)" />
                                          <Button fx:id="btnSolve" mnemonicParsing="false" onAction="#btnSolveClicked" text="Solve">
                                             <HBox.margin>
                                                <Insets left="20.0" />
                                             </HBox.margin>
                                          </Button>
                                       </children>
                                       <opaqueInsets>
                                          <Insets />
                                       </opaqueInsets>
                                       <VBox.margin>
                                          <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                       </VBox.margin>
                                    </HBox>
                                    <TextArea fx:id="taModels" editable="false" prefHeight="200.0" prefWidth="200.0" />
                                 </children>
                              </VBox>
                           </children>
                        </GridPane>
                    </items>
                  </SplitPane>
               </center>
            </BorderPane>
        </items>
      </SplitPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="miOpenFile" mnemonicParsing="false" onAction="#openFileClicked" text="Open ..." />
                  <MenuItem fx:id="miSaveFile" mnemonicParsing="false" onAction="#saveFileClicked" text="Save ..." />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>

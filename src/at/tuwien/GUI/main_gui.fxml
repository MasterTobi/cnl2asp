<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>


<SplitPane dividerPositions="0.5" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.tuwien.GUI.MainGuiController">
  <items>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <Label alignment="TOP_CENTER" text="CNL" BorderPane.alignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </top>
         <center>
            <TextArea fx:id="taCNL" onKeyPressed="#tfCnlOnKeyPressed" prefHeight="200.0" prefWidth="200.0" promptText="insert problem description ..." BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </BorderPane.margin>
               <tooltip>
                  <Tooltip text="insert problem description formulated in the specified CNL" />
               </tooltip>
            </TextArea>
         </center>
         <bottom>
            <TextArea fx:id="taError" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </BorderPane.margin>
            </TextArea>
         </bottom>
      </BorderPane>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <Label alignment="TOP_CENTER" text="ASP" BorderPane.alignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </top>
         <center>
            <SplitPane dividerPositions="0.7196870925684485" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
              <items>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <TextArea fx:id="taASP" prefHeight="200.0" prefWidth="200.0">
                           <GridPane.margin>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </GridPane.margin>
                        </TextArea>
                     </children>
                  </GridPane>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <TextArea fx:id="taModels" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                           <BorderPane.margin>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </BorderPane.margin>
                        </TextArea>
                     </center>
                     <top>
                        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" minWidth="-Infinity" spacing="20.0" BorderPane.alignment="CENTER">
                           <children>
                              <Label text="Filter:" />
                              <TextField fx:id="tfFilter" prefHeight="27.0" prefWidth="240.0" promptText="predicates (seperated with comma)" />
                              <Button fx:id="btnSolve" mnemonicParsing="false" onAction="#btnSolveClicked" text="Solve">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                           <BorderPane.margin>
                              <Insets top="8.0" />
                           </BorderPane.margin>
                        </HBox>
                     </top>
                  </BorderPane>
              </items>
            </SplitPane>
         </center>
      </BorderPane>
  </items>
</SplitPane>
